{

    "listeners": [
        {
            "address": "0.0.0.0",
            "port": 5555,
            "https": false
        }
    ],
    "plugins": [
        {
            "name": "drogon::plugin::PromExporter",
            "dependencies": [],
            "config": {
                "path": "/metrics",
                "collectors":[
                    {
                        "name": "http_requests_total",
                        "help": "The total number of http requests",
                        "type": "counter",
                        "labels": ["method", "path"]
                    },
                    {
                        "name": "http_requests_duration",
                        "help": "The processing time of http requests, in milliseconds",
                        "type": "histogram",
                        "labels": ["method", "path"]
                    }
                ]
            }
        }
    ]
}
